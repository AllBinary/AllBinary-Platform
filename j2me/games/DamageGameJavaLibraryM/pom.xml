            <artifactId>GameInputLibrary</artifactId>
            <!-- AllBinary Platform Version Start -->
            <version>1.0.0-SNAPSHOT</version>
            <!-- AllBinary Platform Version End -->

        </dependency>
        <dependency>
            <groupId>org.allbinary</groupId>
            <artifactId>GameIntermissionLibrary</artifactId>
            <!-- AllBinary Platform Version Start -->
            <version>1.0.0-SNAPSHOT</version>
            <!-- AllBinary Platform Version End -->

        </dependency>
        <dependency>
            <groupId>org.allbinary</groupId>
            <artifactId>CollisionLayerJavaLibrary</artifactId>
            <!-- AllBinary Platform Version Start -->
